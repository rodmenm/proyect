<body>
    <div class="container">
      <h1>Create your Wallet & get a Credential</h1>
    </div>
    <div class="form-container">
      <form action="http://localhost:4000/cred_cre" method="POST">
        <label for="id">Wallet ID</label>
        <input class="input-field" type="text" name="id" placeholder="Wallet ID" />
        <br />
        <label for="key">Wallet Key</label>
        <input class="input-field" type="text" name="key" placeholder="Wallet Key" />
        <br />
        <label for="key">DNI</label>
        <input class="input-field" type="text" name="name" placeholder="DNI" />
        <br />
        <button class="submit-button" type="submit">Register</button>
      </form>
    </div>
  </body>

